{
  "name": "@pydantic/logfire-monorepo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm --filter \"./packages/*\" run build",
    "dev": "pnpm --filter \"./packages/*\" --parallel run dev",
    "test": "pnpm --filter \"./packages/*\" run test",
    "typecheck": "pnpm --filter \"./packages/*\" --parallel run typecheck",
    "lint": "pnpm --filter \"./packages/*\" --parallel run lint",
    "format": "prettier --write .",
    "format-check": "prettier --check .",
    "ci": "pnpm run build && pnpm run typecheck && pnpm run lint && pnpm run format-check && pnpm run test",
    "release": "pnpm run build && pnpm changeset publish",
    "changeset-add": "pnpm changeset add"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.12",
    "prettier": "3.7.4"
  },
  "engines": {
    "node": "22"
  },
  "devEngines": {
    "runtime": {
      "name": "node",
      "onFail": "error"
    },
    "packageManager": {
      "name": "pnpm",
      "onFail": "error"
    }
  },
  "packageManager": "pnpm@10.28.0"
}
